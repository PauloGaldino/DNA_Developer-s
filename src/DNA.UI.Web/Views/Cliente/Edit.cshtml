@model DNA.Application.ViewModels.ClienteViewModel

@{
    ViewData["Title"] = "Editar o Cliente";
}

<div>
    <!--Inicio da secção de introdução interna -->
    <section class="introducao-interna interna_cliente">
        <div class="cliente container">
            <h1 data-anime="400" class="fadeInDown">Registro de novos clientes</h1>
            <p data-anime="800" class="fadeInDown">Sempre escolhemos o melhor.</p>
        </div>
    </section>
    <!-- Final da introdução interna -->
    <div class="registro container ">
        <form asp-action="Edit">
            <div class="contato_form grid-15">
                <input type="hidden" asp-for="Id" />

                <input type="hidden" asp-for="Id" />

                @* Replacing classic Validation Summary to Custom ViewComponent as TagHelper *@
                <vc:summary />

                <div class="form-registro">
                    <label asp-for="Nome"></label>

                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-registro">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-registro">
                    <label asp-for="DataNascimento"></label>
                    <input asp-for="DataNascimento" class="form-control" />
                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                </div>

            </div>
        </form>

    </div>
    <div class="call">

        <input type="submit" value="Salvar" class="btn btn-preto" />
        <a asp-action="Index" class="btn btn-preto">Voltar para a lista</a>

    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
