<!--Index Manager-->
@using DNA.UI.Web.Views.Manage
@model IndexViewModel
@{
    ViewData["Title"] = "Perfil";
    ViewData.AddActivePage(ManageNavPages.Index);
}

@Html.Partial("_StatusMessage", Model.StatusMessage)
<div>
    <!--Inicio da secção de introdução interna -->
    <section class="introducao-interna interna_manager">
        <div class="container">
            <h1 data-anime="400" class="fadeInDown">Gerenciamento de contas</h1>
            <p data-anime="800" class="fadeInDown">Tire suas dúvidas com a gente.</p>
        </div>
    </section>
    <!-- Final da introdução interna -->
    <div class="container">
        <div class="grid-10">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-label">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" disabled />
                </div>
                <div class="form-label">
                    <label asp-for="Email"></label>
                    @if (Model.IsEmailConfirmed)
                    {
                        <div class="input-group">
                            <input asp-for="Email" class="form-control" />
                            <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                        </div>
                    }
                    else
                    {
                        <input asp-for="Email" class="form-control" />
                        <button asp-action="SendVerificationEmail" class="btn btn-link">Enviar email de verificação</button>
                    }
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-preto">Salvar</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
