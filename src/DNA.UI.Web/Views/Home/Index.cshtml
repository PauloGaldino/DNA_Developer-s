@{
    ViewData["Title"] = "DNA Developer's - Home";
}
<div>
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/img/home/introducao/introducao.jpg" alt="AGUAS MINERAIS" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <h1 data-anime="400" class="fadeInDown">Kid Mais</h1>
                    <blockquote data-anime="800" class="quote-externo fadeInDown">
                        <p>"Dos prazeres que a vida nos traz, ter você conosco é o maior deles....."  </p>
                        <cite class="autor">JOSÉ PAULO GALDINO</cite>
                    </blockquote>
                    <a data-anime="1200" asp-area="" asp-controller="Home" asp-action="contato" class="btn btn-introducao">Representantes</a>
                </div>
            </div>
            <div class="item">
                <img src="~/images/carousel1.jpg" alt="REFRIGERANTES" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <h1 data-anime="6400" class="fadeInDown">Kid Mais</h1>
                    <blockquote data-anime="6800" class="quote-externo fadeInDown">
                        <p>"Servido sua familia,pois a é a nossa maior bem....."  </p>
                        <cite class="autor">JOSÉ PAULO GALDINO</cite>
                    </blockquote>
                    <a data-anime="1200" asp-area="" asp-controller="Home" asp-action="contato" class="btn btn-introducao">Representantes</a>
                </div>
            </div>
            <div class="item">
                <img src="~/images/carousel2.jpg" alt="TODOS OS DRINKS" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <h1 data-anime="12400" class="fadeInDown">Kid Mais</h1>
                    <blockquote data-anime="12800" class="quote-externo fadeInDown">
                        <p>"A simplicidade da vida,e ser feliz....."  </p>
                        <cite class="autor">JOSÉ PAULO GALDINO</cite>
                    </blockquote>
                    <a data-anime="1200" asp-area="" asp-controller="Home" asp-action="contato" class="btn btn-introducao">Representantes</a>
                </div>
            </div>
