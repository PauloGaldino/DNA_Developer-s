@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="header_menu ">

    @if (SignInManager.IsSignedIn(User))
    {
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="header_menu">
            <ul class="grid-7 header_login">
                <li>
                    <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Usuário: @UserManager.GetUserName(User)!</a>
                </li>
                <li>
                    <a>
                        <btn type="submit" class="btn btn-link">Sair</btn>
                    </a>
                </li>
            </ul>
        </form>
    }
    else
    {
        <ul nav class="grid-4 header_menu">
            <li><a asp-area="" asp-controller="Account" asp-action="Register">Registrar</a></li>
            <li><a asp-area="" asp-controller="Account" asp-action="Login">Entrar</a></li>
        </ul>
    }
</div>
